<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/background_white</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColor</item>

    </style>

    <style name="naormalTextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="edittext">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:colorControlActivated">@color/colorControlActivated</item>
        <item name="android:backgroundTint">@color/colorControlNormal</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="preferenceScreen" parent="AppTheme">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:colorForeground">@color/colorControlNormal</item>
    </style>

    <style name="tugleBoot" parent="android:Widget">
        <item name="android:background">@drawable/toggle_background</item>
    </style>

</resources>
